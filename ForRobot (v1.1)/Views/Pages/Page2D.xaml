<Page x:Class="ForRobot.Views.Pages.Page2D"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ForRobot.Views.Pages"
      xmlns:vm="clr-namespace:ForRobot.ViewModels"
      xmlns:models="clr-namespace:ForRobot.Model.Detals"
      mc:Ignorable="d"
      Background="Transparent"
      Title="Page2D">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" MaxHeight="25"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" MaxHeight="25"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" MaxHeight="25"/>
        </Grid.RowDefinitions>
        <!--<Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>-->

        <Image Grid.Row="1" Grid.Column="1" Width="Auto" Height="Auto" Source="{Binding Path=Detal2D.GenericImage, RelativeSource={RelativeSource AncestorType={x:Type local:Page2D}, Mode=FindAncestor}}"
               HorizontalAlignment="Center" VerticalAlignment="Center">
            
            <Image.Style>
                <Style TargetType="Image">
                    <Setter Property="MaxHeight" Value="720"/>

                    <Style.Triggers>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding Path=Detal2D.DetalType, RelativeSource={RelativeSource AncestorType={x:Type local:Page2D}, Mode=FindAncestor}}" Value="{x:Static models:DetalType.Plita}"/>
                                <Condition Binding="{Binding Path=Detal2D.ScoseType, RelativeSource={RelativeSource AncestorType={x:Type local:Page2D}, Mode=FindAncestor}}" Value="d_rect"/>
                            </MultiDataTrigger.Conditions>

                            <Setter Property="MaxHeight" Value="400"/>
                        </MultiDataTrigger>
                    </Style.Triggers>
                </Style>
            </Image.Style>
        </Image>

        <Image Grid.Row="3" Width="Auto" Height="Auto" MaxHeight="300" Source="{Binding Path=Detal2D.RebraImage, RelativeSource={RelativeSource AncestorType={x:Type local:Page2D}, Mode=FindAncestor}}"
               HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Page>
