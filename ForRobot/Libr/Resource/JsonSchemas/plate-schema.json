{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "Plate Json-Schema",
  "description": "JSON-схема для валидации класса Plita",
  "x-class-name": "Plita",
  "x-full-name": "ForRobot.Models.Detals.Plita",
  "x-namespace": "ForRobot.Models.Detals",
  "type": "object",

  "properties": {
    "d_type": {
      "type": "string",
      "description": "Тип скоса"
    },

    "reverse_deflection": {
      "type": "number",
      "description": "Обратный прогиб детали"
    },

    "base_width": {
      "type": "number",
      "description": "Ширина настила"
    },

    "base_length": {
      "type": "number",
      "description": "Длина настила"
    },

    "base_thickness": {
      "type": "number",
      "description": "Толщина настила"
    },

    "base_bevel_left": {
      "type": "number",
      "description": "Скос настила слева"
    },

    "base_bevel_right": {
      "type": "number",
      "description": "Скос настила справа"
    },

    "base_displace": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "minItems": 3,
      "maxItems": 3,
      "description": "Смещение настила от нулевой точки стола"
    },

    "wall_count": {
      "type": "integer",
      "minimum": 1,
      "description": "Кол-во рёбер"
    },

    "walls_list": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "wall_cross_dist_left": {
            "type": "number"
          },

          "wall_cross_dist_right": {
            "type": "number"
          },

          "weld_offset_left": {
            "type": "number"
          },

          "weld_offset_right": {
            "type": "number"
          },

          "wall_long_dist_left": {
            "type": "number"
          },

          "wall_long_dist_right": {
            "type": "number"
          },

          "wall_height": {
            "type": "number"
          },

          "wall_thickness": {
            "type": "number"
          }
        },
        "required": [
          "wall_height",
          "wall_thickness",
          "wall_cross_dist_left",
          "wall_cross_dist_right",
          "wall_long_dist_left",
          "wall_long_dist_right",
          "weld_offset_left",
          "weld_offset_right"
        ]
      },
      "minItems": 1,
      "description": "Коллекция рёбер"
    }
  },

  "required": [
    "d_type",
    "reverse_deflection",
    "base_width",
    "base_length",
    "base_thickness",
    "base_bevel_left",
    "base_bevel_right",
    "base_displace",
    "wall_count",
    "walls_list"
  ]
}
