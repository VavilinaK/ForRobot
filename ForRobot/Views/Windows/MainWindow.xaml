<Window x:Class="ForRobot.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ForRobot.Views.Windows"
        xmlns:vm="clr-namespace:ForRobot.ViewModels"
        mc:Ignorable="d"
        Title="{Binding ElementName=MainFrame, Path=Content.Title}"
        Height="800" Width="1500" WindowState="{Binding Path=State}"
        Icon="/InterfaceOfRobots;component/Themes/Icons/robot-arm_158.ico"
        Closing="Window_Closing">

    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

    <Grid>
        <Frame Name="MainFrame" Content="{Binding Path=NowPage}" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
