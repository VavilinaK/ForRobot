                                    CommandParameter="{Binding ElementName=passwordBoxPinCode}"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Popup>

        <DockPanel Grid.Row="0" Grid.ColumnSpan="2">
            <Menu Name="Menu" DockPanel.Dock="Top">
                <Grid Width="{Binding Path=ActualWidth, ElementName=Menu}" Height="Auto" Margin="-8,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ToggleButton Name="buttonSetting" Grid.Column="0" Margin="25,0,5,0" Width="45" HorizontalAlignment="Left" Visibility="Visible" Style="{StaticResource buttonSettingStyle}"/>

                    <Button Grid.Column="1" Margin="10,0" Width="45" HorizontalAlignment="Left" Visibility="Visible" Style="{StaticResource buttonGenerationStyle}"
                            Command="{Binding Path=GenerationCommand}"/>

                    <!--<WrapPanel Grid.Column="1" Orientation="Horizontal" Height="Auto" MaxWidth="1400">
                        <uc:ToolBarTrayForRobot NameRobot="Робот 1" StatusProcess="Ошибка!" Host="192.168.119.134" Port="3333"/>
                        <uc:ToolBarTrayForRobot NameRobot="Робот 1" StatusProcess="Ошибка!" Host="192.168.119.134" Port="3333"/>

                    </WrapPanel>-->

                    <ItemsControl Grid.Column="2" ItemsSource="{Binding Path=Items}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel IsItemsHost="True" MaxWidth="1700"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>

                    <Button Grid.Column="3" Width="45" Margin="15,5" Style="{StaticResource buttonAddUserControl}" Command="{Binding Path=AddItemCommand}"/>

