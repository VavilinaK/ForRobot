<Application x:Class="ForRobot.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:d1p1="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:ForRobot"
             d1p1:Ignorable="d"             
             Startup="OnStartUp"
             DispatcherUnhandledException="OnDispatcherUnhandledException"
             Exit="OnExit"
             ShutdownMode="OnMainWindowClose">
    
  <Application.Resources>
      <ResourceDictionary>                    
          <ResourceDictionary.MergedDictionaries>
              <ResourceDictionary Source="/InterfaceOfRobots;component/Themes/General.xaml"/>
              <ResourceDictionary Source="/InterfaceOfRobots;component/Themes/TabControlStyleResourceDictionary.xaml"/>
                <ResourceDictionary Source="/InterfaceOfRobots;component/Themes/PropertiesWindowStyleDictionary.xaml"/>
                <ResourceDictionary Source="/InterfaceOfRobots;component/Themes/PathBarDirectory.xaml"/>
            </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Application.Resources>
</Application>